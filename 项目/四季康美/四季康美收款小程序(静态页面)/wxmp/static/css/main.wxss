@charset "UTF-8";
/**常用样式**/
.main-bg {
  background: #008fee;
}

.main-color {
  color: #008fee;
}

.padding-lr {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.fc-fff {
  color: #fff;
}

.fc-ccc {
  color: #ccc;
}

.fc-aaa {
  color: #aaa;
}

.bg-ccc {
  background-color: #fff;
}

.ellipsis1 {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ellipsis2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}

.ellipsis3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
}

.ellipsis4 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
}

.float-left {
  float: left;
}

.float-right {
  float: right;
}

.clearfix:after {
  content: '';
  display: block;
  clear: both;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.hide {
  display: none !important;
}

.show {
  display: block !important;
}

.span {
  display: inline-block;
}

.position-relative {
  position: relative;
}

.position-absolute {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 6999;
}

.border-btm,
.border-top {
  position: relative;
}

.border-top::before,
.border-btm::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}

.border-top::before {
  top: 0;
}

.border-btm::after {
  bottom: 0;
}

.border-left,
.border-right {
  position: relative;
}

.border-left::before,
.border-right::after {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  border-left: 1rpx solid #ddd;
  box-sizing: border-box;
  -webkit-transform: scaleX(0.5);
          transform: scaleX(0.5);
}

.border-left::before {
  left: 0;
}

.border-right::after {
  right: 0;
}

.border-line {
  position: relative;
  border: none;
}

.border-line::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  border-width: 1rpx;
  border-style: solid;
  border-color: #ddd;
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: left top;
  transform-origin: left top;
}
