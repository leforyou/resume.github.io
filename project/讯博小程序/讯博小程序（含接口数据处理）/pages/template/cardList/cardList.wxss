.card-list {
    border: 1rpx solid #ccc;
    border-radius: 6px;
    padding: 10px;
    color: #555;
    background: #fff;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    line-height: 1.6;
}

.no-card-list-marbtm .card-list:nth-last-child(1) {
    margin-bottom: 0rpx;
}

.card-pic {
    width: 100%;
    height: 360rpx;
}

.card-title {
    color: #333;
    font-size: 36rpx;
}

.card-date {
    color: #999;
    font-size: 28rpx;
    padding: 3px 0;
}

.card-content {
    color: #555;
    font-size: 28rpx;
}